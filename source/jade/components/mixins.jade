// Products
mixin productsSlider(products)
   .products-slider
      - each product in products
         - var productClass = (product.onSale ? 'products__item--on-sale products__item' : 'products__item')
         - if(product.isNew) {productClass = (product.isNew ? 'products__item--new products__item' : 'products__item')}
         div(class=productClass)
            figure.products-item__img-wrap
               img(src=product.imgSrc).products-item__img
               p.products-item__text= product.text
            .products-item__descr
               a(href="#").products-item__header= product.header
               if product.onSale
                  .products-item__price.products-item__price--have-sale
                     span.products-item__price__value $&nbsp
                        = product.price
                     span.products-item__price__value--sale $&nbsp
                           = product.salePrice
               else
                  .products-item__price
                     span.products-item__price__value $&nbsp
                        = product.price
            a(href="#").products-item__btn Add to cart
